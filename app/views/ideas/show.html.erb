<div class="row">
  <div class="col-md-9">
    <%= image_tag(@idea.picture_url, width: '100%') if @idea.picture.present? %>
  </div>

  <div class="col-md-3">
    <p><b>Name: </b><%= @idea.name %></p>
    <p><b>Description: </b><%= @idea.description %></p>
    <p>
      <%= link_to edit_idea_path(@idea) do %>
        <i class="fa fa-pencil-square-o"></i> Edit
      <% end %>
      <%= link_to @idea, data: { confirm: 'Are you sure?' }, method: :delete do %>
        <i class="fa fa-trash-o"></i> Delete
      <% end %>
      <%= link_to ideas_path do %>
        <i class="fa fa-repeat"></i> Back
      <% end %>
    </p>

    <h3>Comments</h3>
    <% @comments.each do |comment| %>
      <div>
        <strong><%= comment.user_name %></strong>
        <br>
        <p><%= comment.body %></p>
        <p>
          <%= link_to comment_path(comment), method: :delete, data: { confirm: '削除してもよろしいですか？' } do %>
            <i class="fa fa-trash-o"></i> Delete
          <% end %>
          </p>
      </div>
    <% end %>
    <%= render 'comments/form' %>
  </div>
</div>
